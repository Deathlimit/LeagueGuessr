                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/PickLeft5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PicksRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPicksRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="0.01"
                android:gravity="center"
                android:text="@string/picks"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/PickRight1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/PickRight2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/PickRight3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/PickRight4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/PickRight5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewBansRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="0.05"
                android:gravity="center"
                android:text="@string/bans"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/BanRight1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:minHeight="100dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
