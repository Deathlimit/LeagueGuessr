                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:minHeight="100dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/BanLeft5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:minHeight="100dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PicksLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPicksLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="0.01"
                android:gravity="center"
                android:text="@string/picks"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/PickLeft1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/PickLeft2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/PickLeft3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                app:srcCompat="@drawable/_unknown_pick_ban"
                tools:srcCompat="@drawable/_unknown_pick_ban" />

            <ImageView
                android:id="@+id/PickLeft4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
